{
	"name": "Blocky Borders Dark",
	"type": "dark",
	"colors": {
		"editor.background": "#181818",
		"editor.foreground": "#d6d6d6",
		"editorLineNumber.foreground": "#535353",
		"editorLineNumber.activeForeground": "#FFFFFF",
		"editor.lineHighlightBackground": "#1c1c1c",
		"editor.selectionBackground": "#555555",
		"editor.selectionHighlightBackground": "#ffffff00",
		"editorIndentGuide.background1": "#4e4e4e",
		"editorIndentGuide.activeBackground1": "#9e9e9e",
		"editorCursor.foreground": "#FFCC00",
		"editorGroup.border": "#000000",
		"editorGroupHeader.tabsBorder": "#000000",
		"tab.border": "#000000",
		"tab.activeBackground": "#181818",
		"tab.inactiveBackground": "#181818",
		"tab.activeForeground": "#d6d6d6",
		"tab.inactiveForeground": "#888888",
		"sideBar.background": "#252525",
		"sideBar.foreground": "#d6d6d6",
		"sideBar.border": "#000000",
		"sideBarTitle.foreground": "#ffffff",
		"sideBarSectionHeader.background": "#181818",
		"sideBarSectionHeader.foreground": "#d6d6d6",
		"activityBar.background": "#181818",
		"activityBar.foreground": "#d6d6d6",
		"activityBar.border": "#000000",
		"activityBarBadge.background": "#FFCC00",
		"activityBarBadge.foreground": "#181818",
		"statusBar.background": "#181818",
		"statusBar.foreground": "#d6d6d6",
		"statusBar.border": "#000000",
		"statusBar.debuggingBackground": "#3b3b3b",
		"statusBar.debuggingForeground": "#FFCC00",
		"panel.background": "#181818",
		"panel.border": "#000000",
		"panelTitle.activeForeground": "#d6d6d6",
		"panelTitle.inactiveForeground": "#888888",
		"terminal.background": "#181818",
		"terminal.foreground": "#dfdfdf",
		"terminalCursor.foreground": "#FFCC00",
		"terminal.selectionBackground": "#555555",
		// âœ… Button-specific colors
		"button.background": "#2b2b2b",
		"button.foreground": "#d6d6d6",
		"button.hoverBackground": "#3b3b3b",
		"button.secondaryBackground": "#252525",
		"button.secondaryForeground": "#d6d6d6",
		"button.secondaryHoverBackground": "#3b3b3b",
		"button.border": "#000000",
		// Quick pick / dropdown buttons
		"dropdown.background": "#252525",
		"dropdown.foreground": "#d6d6d6",
		"dropdown.border": "#000000",
		// Input box buttons (like find, search)
		"input.background": "#252525",
		"input.foreground": "#d6d6d6",
		"input.border": "#000000",
		"inputOption.activeBorder": "#FFCC00"
	},
	"tokenColors": [
		{
			"scope": [
				"comment",
				"punctuation.definition.comment"
			],
			"settings": {
				"foreground": "#469857",
				"fontStyle": "italic"
			}
		},
		{
			"scope": [
				"keyword",
				"storage.type"
			],
			"settings": {
				"foreground": "#de2c7f",
				"fontStyle": "bold"
			}
		},
		{
			"scope": [
				"string",
				"constant.other.symbol"
			],
			"settings": {
				"foreground": "#33c449"
			}
		},
		{
			"scope": [
				"variable",
				"entity.name.function"
			],
			"settings": {
				"foreground": "#ad81ff"
			}
		},
		{
			"scope": [
				"constant.numeric",
				"constant.language",
				"constant.character"
			],
			"settings": {
				"foreground": "#f3c83d"
			}
		},
		{
			"scope": [
				"entity.name.type",
				"entity.name.class",
				"entity.name.namespace"
			],
			"settings": {
				"foreground": "#e0737c",
				"fontStyle": "bold"
			}
		},
		{
			"scope": [
				"support.function",
				"support.constant",
				"support.type"
			],
			"settings": {
				"foreground": "#2588f3",
				"fontStyle": "bold"
			}
		},
		{
			"scope": [
				"punctuation",
				"operator"
			],
			"settings": {
				"foreground": "#dfdfdf"
			}
		},
		{
			"scope": [
				"invalid",
				"invalid.illegal"
			],
			"settings": {
				"foreground": "#ffffff"
			}
		},
		{
			"scope": [
				"deprecated"
			],
			"settings": {
				"foreground": "#888888",
				"fontStyle": "strikethrough"
			}
		},
		{
			"scope": [
				"markup.heading",
				"markup.bold"
			],
			"settings": {
				"foreground": "#e5c07b",
				"fontStyle": "bold"
			}
		},
		{
			"scope": [
				"markup.italic"
			],
			"settings": {
				"foreground": "#e5c07b",
				"fontStyle": "italic"
			}
		},
		{
			"scope": [
				"markup.quote"
			],
			"settings": {
				"foreground": "#5bdb748e",
				"fontStyle": "italic"
			}
		},
		{
			"scope": [
				"markup.list",
				"markup.raw"
			],
			"settings": {
				"foreground": "#d19a66"
			}
		},
		{
			"scope": [
				"meta",
				"meta.structure"
			],
			"settings": {
				"foreground": "#dfdfdf"
			}
		},
		{
			"scope": [
				"keyword.operator.unpacking",
				"punctuation.definition.operator"
			],
			"settings": {
				"foreground": "#FF8800"
			}
		}
	]
}